@model IEnumerable<HAPPAN_MVC.Models.VMModels.VMProjects>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"> Dashboard</h1>
            </div><!-- /.col -->

        </div><!-- /.row -->
    </div><!-- /.container-fluid -->



</div>
<!-- /.content-header -->
<!-- Content Wrapper. Contains page content -->
<div class="">

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            @*<th>
                                @Html.DisplayNameFor(model => model.ProjectId)
                            </th>*@
                            <th>
                               Project Number
                            </th>
                            <th style="width: 30%">
                                Team Members
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProjectName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProjectProgress)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int index = 1;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @index

                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.ProjectId)
                                </td>*@

                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="~/images/img/avatar.png">
                                        </li>
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="~/images/img/avatar2.png">
                                        </li>
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="~/images/img/avatar3.png">
                                        </li>
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="~/images/img/avatar04.png">
                                        </li>
                                    </ul>
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.ProjectName)
                                </td>
                                <td>
                                    <div class="progress progress-sm">
                                        @{var p = item.ProjectProgress + "%";}
                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="57" aria-volumemin="0" aria-volumemax="100" style="width:@p ">
                                        </div>
                                    </div>
                                    @{ var po = item.ProjectProgress;}
                                    @if (po > 0)
                                    {
                                        @Html.DisplayFor(modelItem => item.ProjectProgress) <a>%</a>
                                    }
                                    else
                                    {
                                        <a>No Task Added</a>
                                    }

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/CurrentProject/Info?projectId=@item.ProjectId">
                                        <i class="fas fa-folder">
                                        </i>
                                        View
                                    </a>
                                    <a asp-controller="AddProject" asp-action="Index" asp-route-id="@item.ProjectId" class="btn btn-info btn-sm"><i class="fas fa-pencil-alt"></i>Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.ProjectId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure to delete this record?')"><i class="fas fa-trash">  Delete</i></a>

                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
